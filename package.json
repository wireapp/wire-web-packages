{
  "devDependencies": {
    "husky": "0.14.3",
    "lerna": "2.5.1",
    "lint-staged": "4.3.0",
    "prettier": "1.8.1"
  },
  "lint-staged": {
    "*.{js,ts}": ["yarn lint:script", "git add"]
  },
  "private": true,
  "scripts": {
    "boot": "lerna bootstrap",
    "clear": "lerna run clear",
    "dist": "lerna run dist",
    "lint": "yarn lint:script",
    "lint:script": "prettier --ignore-path .gitignore --write **/*.{js,ts}",
    "test": "lerna run dist && lerna run test"
  },
  "workspaces": ["packages/*"]
}
