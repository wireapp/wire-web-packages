{
  "devDependencies": {
    "babel-eslint": "8.0.2",
    "eslint-config-prettier": "2.7.0",
    "eslint-plugin-prettier": "2.3.1",
    "eslint-plugin-react": "7.4.0",
    "eslint": "4.11.0",
    "husky": "0.14.3",
    "lerna": "2.5.1",
    "lint-staged": "5.0.0",
    "prettier": "1.8.2"
  },
  "lint-staged": {
    "*.{js,jsx}": ["eslint -c .eslintrc.yaml --ignore-path .prettierignore --fix", "git add"],
    "*.ts": ["prettier --writ`e", "git add"],
    "*.json": ["prettier --write", "git add"],
    "*.scss": ["prettier --write", "git add"]
  },
  "private": true,
  "scripts": {
    "boot": "lerna bootstrap",
    "clear": "lerna run clear",
    "dist": "lerna run dist",
    "fix:config": "prettier --write '**/*.json'",
    "fix:jsscript": "npm run test -- --fix",
    "fix:style": "prettier --write '**/*.scss'",
    "fix:tsscript": "prettier --write '**/*.ts'",
    "fix:script": "yarn fix:tsscript && yarn fix:jsscript",
    "fix": "yarn fix:config && yarn fix:style && yarn fix:script",
    "test:script": "eslint -c .eslintrc.yaml --ignore-path .gitignore --ignore-path .prettierignore 'packages/react-ui-kit/**/*.{js,jsx}'",
    "test": "lerna run test"
  },
  "workspaces": [
    "packages/*"
  ]
}
